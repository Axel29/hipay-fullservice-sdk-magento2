<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="hipay_proxy_settings" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Proxy settings</label>
        <field id="hipay_proxy_host" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Proxy host</label>
            <comment>Leave blank if no proxy</comment>
        </field>
        <field id="hipay_proxy_port" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Proxy port</label>
            <comment>Leave blank if no proxy</comment>
        </field>
        <field id="hipay_proxy_user" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Proxy user</label>
            <comment>Leave blank if no proxy</comment>
        </field>
        <field id="hipay_proxy_password" translate="label" type="obscure" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Proxy password</label>
            <comment>Leave blank if no proxy</comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
    </group>
</include>
